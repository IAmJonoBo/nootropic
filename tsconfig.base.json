{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "composite": false,
    "declaration": false,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@nootropic/adapters": ["libs/src/index.ts"],
      "@nootropic/agents": ["libs/src/index.ts"],
      "@nootropic/shared": ["libs/src/index.ts"],
      "@nootropic/utils": ["libs/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
