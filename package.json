{
  "name": "nootropic",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "workspaces": [
    "apps/*",
    "libs/*",
    "plugins/*",
    "tools/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "sonarlint": "sonarlint -Dsonar.projectKey=nootropic -Dsonar.sources=apps,libs,packages -Dsonar.exclusions=**/node_modules/**,**/dist/**,**/coverage/**,**/.turbo/**,**/.next/**,**/build/**",
    "typecheck": "turbo run typecheck",
    "build:lib": "turbo run build:lib",
    "build:watch": "turbo run build:watch",
    "build:clean": "turbo run build:clean",
    "test:e2e": "turbo run test:e2e",
    "test:coverage": "turbo run test:coverage",
    "test:ui": "turbo run test:ui",
    "dev:tsx": "turbo run dev:tsx",
    "build:unbuild": "turbo run build:unbuild",
    "lint:fix": "turbo run lint:fix",
    "postinstall": "husky",
    "security:scan": "turbo run security:scan",
    "security:ci": "turbo run security:ci",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "semantic-release",
    "plop": "plop",
    "telemetry": "node -r @nootropic/telemetry packages/telemetry/src/index.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.53.0",
    "@nestjs/common": "^11.1.3",
    "@opentelemetry/api": "^1.9.0",
    "@temporalio/activity": "^1.11.8",
    "@temporalio/client": "^1.11.8",
    "@temporalio/worker": "^1.11.8",
    "@temporalio/workflow": "^1.11.8",
    "@vscode/test-electron": "^2.5.2",
    "chromadb": "^3.0.3",
    "dotenv": "^16.5.0",
    "electron": "^36.4.0",
    "glob": "^11.0.2",
    "nestjs": "^0.0.1",
    "next": "^15.3.3",
    "pino": "^9.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.8",
    "tslib": "^2.8.1",
    "vite": "^6.3.5",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.4",
    "@nestjs/testing": "^11.1.3",
    "@opentelemetry/sdk-node": "^0.202.0",
    "@playwright/test": "^1.52.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@swc-node/register": "^1.10.10",
    "@swc/core": "^1.11.31",
    "@swc/helpers": "~0.5.17",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@trunkio/launcher": "^1.3.4",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitest/coverage-v8": "^3.2.2",
    "@vitest/ui": "^3.2.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.28.0",
    "eslint-config-next": "^15.3.3",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "30.0.0-beta.3",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^16.1.0",
    "plop": "^4.0.1",
    "pnpm": "^10.12.1",
    "postcss": "^8.5.4",
    "prettier": "^3.5.3",
    "remark-cli": "^12.0.1",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.5",
    "semgrep": "^1.0.0",
    "sonarlint": "^1.1.0",
    "sonarqube-scanner": "^4.3.0",
    "trunk": "^1.1.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "unplugin": "^2.3.5",
    "verdaccio": "^6.1.2",
    "vitest": "^3.2.2",
    "yo": "^5.1.0"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=20.11.0"
  },
  "pnpm": {
    "overrides": {
      "yargs-parser@>=6.0.0 <13.1.2": ">=13.1.2",
      "got@<11.8.5": ">=11.8.5",
      "semver-regex@<3.1.3": ">=3.1.3",
      "semver-regex@<3.1.4": ">=3.1.4",
      "trim-newlines@<3.0.1": ">=3.0.1",
      "next@>=13.0 <15.2.2": ">=15.2.2",
      "glob@<10.0.0": ">=10.0.0",
      "rimraf@<4.0.0": ">=4.0.0",
      "boolean@<3.2.0": ">=3.2.0",
      "are-we-there-yet@<2.0.0": ">=2.0.0",
      "gauge@<2.0.0": ">=2.0.0",
      "lodash.get@<4.4.2": ">=4.4.2",
      "inflight@<2.0.0": ">=2.0.0"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
